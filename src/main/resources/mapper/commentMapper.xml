<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Comment">
    <insert id="commentSave" parameterType="comment">
        insert into comment_table (commnetWriter,commentContents,boardId) values
            (#{commnetWriter},#{commentContents},#{boardId})
    </insert>

    <select id="findAll" parameterType="Long" resultType="comment">
        select * from  comment_table where boardId=#{boardId} order by id asc
    </select>
</mapper>